@model List<Product>

<div class="product-slider multiple-row  slider-border-multiple-row  sb-slick-slider"
                         data-slick-setting='{
                            "autoplay": true,
                            "autoplaySpeed": 8000,
                            "slidesToShow": 5,
                            "rows":1,
                            "dots":true
                        }' data-slick-responsive='[
                            {"breakpoint":1200, "settings": {"slidesToShow": 3} },
                            {"breakpoint":768, "settings": {"slidesToShow": 2} },
                            {"breakpoint":480, "settings": {"slidesToShow": 1} },
                            {"breakpoint":320, "settings": {"slidesToShow": 1} }
                        ]'>
                        @foreach (Product product in Model)
                        {
                            <div class="single-slide">
                                    <div class="product-card">
                                        <div class="product-header">
                                            <a href="#" class="author">
                                                @product.Author.FullName
                                            </a>
                                            <h3><a href="product-details.html">@product.Name</a></h3>
                                        </div>
                                        <div class="product-card--body">
                                            <div class="card-image">
                                                <img src="~/assets/image/products/product-1.jpg" alt="">
                                                <div class="hover-contents">
                                                    <a href="product-details.html" class="hover-image">
                                                        <img src="~/assets/image/products/product-1.jpg" alt="">
                                                    </a>
                                                    <div class="hover-btns">
                                                        <a href="cart.html" class="single-btn">
                                                            <i class="fas fa-shopping-basket"></i>
                                                        </a>
                                                        <a href="wishlist.html" class="single-btn">
                                                            <i class="fas fa-heart"></i>
                                                        </a>
                                                        <a href="compare.html" class="single-btn">
                                                            <i class="fas fa-random"></i>
                                                        </a>
                                                        <a data-id="@product.Id" data-toggle="modal" data-target="#quickModal"
                                                            class="single-btn open-modal-btn">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="price-block">
                                                @if(product.DiscountPrice > 0) {
                                                    <span class="price">£@(product.SalePrice - product.DiscountPrice)</span>
                                                    <del class="price-old">£@product.SalePrice</del>
                                                    <span class="price-discount">%@Math.Round((product.DiscountPrice * 100) / product.SalePrice)</span>
                                                }   
                                                else 
                                                {
                                                    <span class="price">£@product.SalePrice</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        }
                    </div>