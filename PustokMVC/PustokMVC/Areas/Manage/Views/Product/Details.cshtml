@model Product

<div class="card">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="d-flex justify-content-between my-4 px-4">
                            <a class="btn btn-primary" asp-area="manage" asp-controller="product" asp-action="index">Go back</a>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between my-4 px-4">

                    <a asp-area="manage" asp-controller="product" asp-action="update" asp-route-id="@Model.Id" class="btn text-white btn-warning mr-3">Update</a>
                    <a asp-area="manage" asp-controller="product" asp-action="delete" asp-route-id="@Model.Id" class="btn btn-danger text-white">Delete</a>
                </div>
            </div>

        </div>
    </div>

    <div class="card-body">
        <p><strong>Name</strong></p>
        <h4 class="card-title">@Model.Name</h4>
        <p><strong>Sale price</strong></p>
        <h4 class="card-title">@Model.SalePrice</h4>
        <p><strong>Cost price</strong></p>
        <h4 class="card-title">@Model.CostPrice</h4>
        <p><strong>Discount price</strong></p>
        <h4 class="card-title">@Model.DiscountPrice</h4>
        <p><strong>Description</strong></p>
        <h4 class="card-title">@Model.Description</h4>
        <p><strong>Info text</strong></p>
        <h4 class="card-title">@Model.InfoText</h4>
        <p><strong>Is new?</strong></p>
        <h4 class="card-title">@Model.IsNew</h4>
        <p><strong>Is featured?</strong></p>
        <h4 class="card-title">@Model.IsFeatured</h4>
        <p><strong>Genre</strong></p>
        <h4 class="card-title">@Model.Genre.Name</h4>
        <p><strong>Author's fullname</strong></p>
        <h4 class="card-title">@Model.Author.FullName</h4>
        <p><strong>Images</strong></p>
        @foreach (ProductImage image in @Model.ProductImages)
        {
            <img src="~/assets/uploads/productImages/@image.Name">
        }
    </div>
</div>