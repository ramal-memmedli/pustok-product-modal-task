@model Feature

<div class="card">
                <div class="card-body">
                  <h4 class="card-title">Delete feature</h4>
                  <form method="post" asp-route-id="@Model.Id" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="@Model.Header">Please type <strong>CONFIRM</strong> if you are sure for delete this feature</label>
                      <input asp-for="@Model.Header" value="" class="form-control" placeholder="Title">
                      <span asp-validation-for="Header" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-area="manage" asp-controller="feature" asp-action="index" class="btn btn-light">Cancel</a>
                  </form>
                </div>
              </div>